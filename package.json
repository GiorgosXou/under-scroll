{
	"name": "under-scroll",
	"displayName": "Under Scroll",
	"description": "Extends the visible scrolling range of a single editor pane, through multiple editor panes.",
	"publisher": "GiorgosXou",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/GiorgosXou/Under-Scroll.git"
	},
	"icon": "icon.png",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "UnderScroll.toggleUnderSynchronizedScrolling",
				"title": "Toggle Under Scrolling"
			}
		],
		"configuration": {
			"title": "UnderScroll",
			"properties": {
				"synchronizedScrolling.automaticallyEnabled": {
					"type": "boolean",
					"default": true
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
